#include<iostream>
#include<iomanip>
#include<climits>
#include<cmath>
#include<vector>
#include<map>
#include<queue>
#include<algorithm>
#include<cstring>
using namespace std;
using ll=long long;
int mod=1e9+7;
ll dp[1000001];
ll funct(int n)
{
    if (n==0) return 1;
    if (dp[n]!=-1) return dp[n];
    ll ans=0;
    for (int i=1;i<=6;i++){
        if (i<=n) ans+=funct(n-i);
    }
    return dp[n]=ans%mod;
}
int main()
{
    ios::sync_with_stdio(false);
    cin.tie(0);
    cout.tie(0);
    memset(dp,-1,sizeof dp);
    int n;
    cin>>n;
    cout<<funct(n)<<endl;
}
