//https://cses.fi/problemset/task/1666/
#include<iostream>
#include<vector>
using namespace std;
using ll=long long;
vector<int> V[100001];
vector<bool> visited(100001,false);
int last;
void dfs(int x)
{
    visited[x]=true;
    last=x;
    for (int i: V[x]){
        if (!visited[i]){
            dfs(i);
        }
    }
}
int main()
{
    ios::sync_with_stdio(false);
    cin.tie(0);
    cout.tie(0);
    int n,m;
    cin>>n>>m;
    for (int i=0;i<m;i++){
        int x,y;
        cin>>x>>y;
        V[x].push_back(y);
        V[y].push_back(x);
    }
    dfs(1);
    vector<pair<int,int>> ans;
    for (int i=2;i<=n;i++){
        if (!visited[i]){
            ans.push_back({i,last});
            dfs(i);
        }
    }
    cout<<ans.size()<<endl;
    for (auto p: ans) cout<<p.first<<' '<<p.second<<endl;
}
