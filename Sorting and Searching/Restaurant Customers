//https://cses.fi/problemset/task/1619/
#include<iostream>
#include<vector>
#include<algorithm>
using namespace std;
using ll=long long;
int main()
{
    ios::sync_with_stdio(false);
    cin.tie(0);
    cout.tie(0);
	int n;
	cin>>n;
	vector<pair<int,bool>> v;
	for (int i=0;i<n;i++){
		int a,b;
		cin>>a>>b;
		v.push_back({a,1});
		v.push_back({b,0});
	}
	sort(v.begin(), v.end());
	int ans=0,c=0;
	for (auto i:v){
		if (i.second) c++;
		else {
			ans=max(ans,c);
			c--;
		}
	}
	ans=max(ans,c);
	cout<<ans<<endl;
}
